html,
body {
  width: 100%;
  height: 100%;
  min-height: $site-min-height;
}

body {
  margin: 0 auto;
  padding: 0 auto;
  font-family: Arial,Tahoma,sans-serif;
  background: $bgColor;

  -webkit-tap-highlight-color: rgba(0,0,0,0);
  -webkit-touch-callout: none;
  -webkit-user-select: none;
  -khtml-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;

  min-width: $site-sml-min-width;
}

canvas {
  background-color: $bgColor;
}

img {
  max-width: 100%;
  height: auto;
}

.unselectable {
  -moz-user-select: -moz-none;
  -khtml-user-select: none;
  -webkit-user-select: none;
  -o-user-select: none;
  user-select: none;
}

ol {
  list-style-type: none;
}

ul,li {
  list-style: none;
  position: relative;
  margin: 0px;
  padding: 0px;
}


.btn, a {
  cursor: pointer;
  border: none;
  // no underline.
  text-decoration: none;
}

.btn,
.button {
  width: auto;
  display: block;
  text-align: center;
  font-family: sans-serif;
  cursor: pointer;
  text-transform: uppercase;

  &:hover {

  }
}

.icon,
.img {
  background-repeat: no-repeat;
  background-position: 50%;
}

header {
  position: fixed;
  width: 100%;
  padding: 20px;
  top: 0;
  left: 0;
  color: #FFF;

	a {
    color: #FFF;
    text-transform: uppercase;
  }

}

#content-wrapper {
	padding-top: 100px;
	position: relative;
  width: 80%;
	max-width: 900px;
	margin: auto;
}

#root,
section {
	padding: 20px 0px;
  position: relative;
  width: 100%;
  text-align: center;
}

.logo {
	width: 50px;
	height: 50px;
	background: #FCE8E8;

	span {
		padding: 7px;
		display: block;
	}
	svg {
		fill: #1A540E;
	}
}

.hide {
	display: none;
}

section {

	h1 {
		color: #333;
	}
	p {
		color: #666;
		padding: 10px;
	}
	a.cta {
		color: $niceBlue;
		text-decoration: underline;
		&:hover {
			opacity: 0.75;
		}
	}
}
