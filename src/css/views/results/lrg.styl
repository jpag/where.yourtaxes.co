#content-results {

	section {
		text-align: left;

		p {
			.tax-paid {
				color: $colorTaxPaid;
				font-weight: 700;
				font-size: 1.2rem;
			}
		}
		ul {
			// padding: 20px 0px;
			$priorityTextColor = #333;
			$lessTextColor = #666;

			li {
				background: #fafafa;
				padding: 20px;
				margin: 10px 0px;
				// border-top: 1px solid #ddd;
				// color: #333;

				opacity: 1;
				transform: translate3d(0px, 0px, 0px);
				transition: all $time-reveal-entry $quint-ease-out;

				p.paid {
					opacity: 1;
					max-width: 300px;
					transition: all 750ms $quad-ease-in-out;
					transition-delay: $time-reveal-entry * 0.8;
				}

				&.hide {
					opacity: 0;
					transform: translate3d(0px, 200px, 0px);
					p.paid {
						opacity: 0;
						max-width: 0px;
					}
				}

				h2, p {
					position: relative;
					display: inline-block;
					padding: 0px 0px 15px;
					font-weight: 700;
					font-size: 1.5rem;
					transition: none;
				}

				h2 {
					color: $priorityTextColor;
					max-width: 75%;
					text-align: left;
				}

				h4 {
					color: $lessTextColor;
					opacity: 0.9;
					padding-top: 10px;
					border-bottom: 1px solid RGBA(255,255,255,0.2);
					padding-bottom: 5px;
					margin-bottom: 5px;
				}

				p.paid {
					color: #fff;
					vertical-align: top;
					position: absolute;
					right: 0px;
					top: 0px;
					padding: 10px;
					height: 100%;
					width: auto;
				}

				.links {
					position: relative;
					display: block;
					clear: both;
					a {
						color: $lessTextColor;
						display: block;
						font-size: 10px;
					}
				}

				&.cut {
					p.paid {
						background: $colorCut;
					}
					p.paid:before {
						content:"-";
						// position: absolute;
						// left: -12px;
					}
				}

				&.add {
					p.paid {
						background: $colorAdd;
					}

					p.paid:before {
						content:"+";
						// position: absolute;
						// left: 0px;
					}
				}

				&:first-child {
					border-top: none;
				}
			}
		}
	}

	a.cta {
		margin: 20px 0px 20px;
		display: inline-block;
		width: auto;
	}
}
